<div class="container">
  <h1>Lab 4</h1>

  <%= form_for :interest, url: interests_path do |f| %>
    <p>
      <%= f.label :name %><br>
      <%= f.text_field :name %>
    </p>

    <p>
      <%= f.label :email %><br>
      <%= f.text_field :email %>
    </p>

    <p>
      <%= f.label :experince %><br>
      <%= f.text_area :experince %>
    </p>

    <p>
      <%= f.submit %>
    </p>
  <% end %>

</div>

<%= link_to 'View all submissions', interests_path %>
